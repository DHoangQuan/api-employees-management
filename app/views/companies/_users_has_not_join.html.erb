<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">List Users</h6>
  </div>

  <div class="card-body">
    <%= form_with url: add_users_company_path(@company_id), method: :post do |form| %>
      <div class="table-responsive">
        <table class="table table-bordered dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                  <th>Number</th>
                  <th>Check to join</th>
                  <th>Company Name</th>
                </tr>
            </thead>
            <tbody>
                <% count = 0 %>
                <% @users&.each do |user| %>
                  <% count += 1 %>
                <tr>
                  <td><%= count %></td>
                  <td><%= form.check_box(:user_ids, { multiple: true }, user.id, nil) %></td>
                  <td><%= user.display_name.upcase %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
      </div>
      <%= form.submit class: 'btn btn-success'%>
    <% end %>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.dataTable').DataTable();
  });
</script>